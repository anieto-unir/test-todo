//
// CI 4.0
//
pipeline {
    agent any

    stages {
        stage('Get Code') {
            steps {
                sh 'rm -rf .git'
                git url:'https://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@github.com/anieto-unir/test-todo.git', branch:'develop'
                sh 'rm samconfig.toml'
                echo "Code"
            }
        }
        
        stage('Deploy') {
            steps {
                sh '''
                   sam build
                   sam deploy --resolve-s3 --stack-name "todo-list-aws-staging" --region "us-east-1" --no-fail-on-empty-changeset
                   BASE_URL=$(aws cloudformation describe-stacks --stack-name todo-list-aws-staging --query 'Stacks[0].Outputs[?OutputKey==`BaseUrlApi`].OutputValue' --output text)
                   echo "export BASE_URL=${BASE_URL}" > env.sh
                   chmod a+x env.sh
                   echo "La URL de la API es: ${BASE_URL}"
                '''
            }
        }
        
        stage('Test')
        {
            steps {
                sh '''
                   . ./env.sh
                   python3 -m pytest --junit-xml=result-int.xml test/integration/todoApiTest.py || true
                '''
                junit allowEmptyResults: true, testResults:'result-int.xml'
                script
                {
                    if (currentBuild.result == 'UNSTABLE')
                        error("")
                }
            }
        }
        
        stage('Promote')
        {
            steps {
                sh '''
                   git checkout master
                   git config merge.ours.driver true
                   git merge develop --no-edit
                   git push
                '''
            }
        }
    }
}
